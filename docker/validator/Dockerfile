ARG GO_VERSION
ARG GOARCH=amd64
ARG GOOS=linux

FROM polard/base:v0.0.0 as basepolard

RUN apk add --no-cache bash jq

WORKDIR /

COPY ./e2e/testapp/docker/validator/scripts scripts/

RUN chmod +x scripts/*

CMD ["sh", "-c", "sleep infinity"]